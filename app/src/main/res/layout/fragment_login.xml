<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/application_background"
             tools:context=".Fragments.LoginFragment">

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|center_vertical"
		android:background="@drawable/glass_effect_background"
		android:orientation="vertical"
		android:alpha="0.9"
		android:padding="20dp">

		<EditText
			android:id="@+id/loginEmailTextInput"
			android:layout_width="280dp"
			android:layout_height="50dp"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_marginBottom="10dp"
			android:ems="10"
			android:hint="Email"
			android:includeFontPadding="false"
			android:inputType="textEmailAddress"
			android:textColor="@color/black"
			android:textColorHint="@color/black" />

		<EditText
			android:id="@+id/loginPasswordTextInput"
			android:layout_width="280dp"
			android:layout_height="50dp"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="10dp"
			android:ems="10"
			android:hint="Password"
			android:includeFontPadding="false"
			android:inputType="textPassword"
			android:textColor="@color/black"
			android:textColorHint="@color/black" />

		<Button
			android:id="@+id/buttonConfirmLoginButton"
			android:layout_width="280dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|center_vertical"
			android:layout_marginBottom="10dp"
			android:background="@drawable/buttons"
			android:fontFamily="@font/akaya_telivigala"
			android:textAllCaps="false"
			android:includeFontPadding="false"
			android:text="Login"
			android:textAlignment="center"
			android:textColor="#FAFAFA"
			android:textSize="24sp" />

		<Button
			android:id="@+id/buttonRegisterFromLogin"
			android:layout_width="280dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal|center_vertical"
			android:background="@drawable/transparent_button"
			android:fontFamily="@font/akaya_telivigala"
			android:textAllCaps="false"
			android:includeFontPadding="false"
			android:text="Create An Account"
			android:textAlignment="center"
			android:textColor="#142FBA"
			android:textSize="20sp" />
	</LinearLayout>

</FrameLayout>